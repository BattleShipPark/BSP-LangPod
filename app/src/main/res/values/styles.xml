<resources>

    <!-- Base application theme. -->
    <style name="ToolBarTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
            <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="SettingItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingItemTopText" parent="SettingItem">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="SettingItemText" parent="SettingItemTopText">
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="SettingItemOption" parent="SettingItem">
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="SettingItemSeperator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#3e3e3e</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
</resources>
